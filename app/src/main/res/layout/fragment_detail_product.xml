<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_intro"
    tools:context=".Fragment.DetailProductFragment">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="10dp">

         <ImageView
             android:id="@+id/img_detail_product_photo"
             android:layout_width="match_parent"
             android:layout_height="200dp"
             android:layout_marginBottom="20dp"
             android:src="@drawable/iphone12xanhla"></ImageView>

         <TextView
             android:id="@+id/tv_detail_product_name"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/img_detail_product_photo"
             android:text="Phở"
             android:textColor="@color/bg_form"
             android:textSize="30sp"></TextView>

         <TextView
             android:id="@+id/tv_detail_product_2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@+id/tv_detail_product_name"
             android:layout_marginTop="10dp"
             android:text="Giá :"
             android:textColor="@color/purple_700"
             android:textSize="20sp"></TextView>

         <TextView
             android:id="@+id/tv_detail_product_price"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/tv_detail_product_name"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="10dp"
             android:layout_toRightOf="@+id/tv_detail_product_2"
             android:text="40.000 Đ"
             android:textColor="@color/white"
             android:textSize="20sp"></TextView>

         <Button
             android:id="@+id/btn_detail_product_buy"
             android:layout_width="150dp"
             android:layout_height="50dp"
             android:layout_below="@id/tv_detail_product_2"
             android:layout_marginTop="10dp"
             android:layout_marginBottom="20dp"
             android:background="@drawable/custom_button_red"
             android:backgroundTint="@null"
             android:text="Đặt Ngay"
             android:textColor="@color/black"
             android:textSize="20dp"
             app:backgroundTint="@null"></Button>

         <TextView
             android:id="@+id/tv_detail_product_3"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/btn_detail_product_buy"
             android:text="Giới Thiệu Món Ăn"
             android:textColor="@color/purple_700"
             android:textSize="30dp"
             android:textStyle="bold|italic"></TextView>

         <TextView
             android:id="@+id/tv_detail_product_description"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_below="@+id/tv_detail_product_3"
             android:layout_marginBottom="30dp"
             android:text="ngon lắm"
             android:textColor="@color/white"
             android:textSize="25dp"
             android:textStyle="normal"></TextView>

      </RelativeLayout>

   </ScrollView>


</FrameLayout>